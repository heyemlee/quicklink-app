DATABASE_URL="postgresql://user:password@localhost:5432/quicklink_app"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-generated-secret-key-here"
REGISTRATION_INVITE_CODE="your-invite-code-here"
RESEND_API_KEY="re_..."
EMAIL_FROM="onboarding@resend.dev"
OPENAI_API_KEY=""

# 数据库配置（必需）
# 本地 PostgreSQL:
# DATABASE_URL="postgresql://postgres:password@localhost:5432/quicklink_app"
# Supabase:
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres"
DATABASE_URL="postgresql://user:password@localhost:5432/quicklink_app"

# NextAuth 配置（必需）
# 开发环境使用 http://localhost:3000
# 生产环境使用实际域名 https://yourdomain.com
NEXTAUTH_URL="http://localhost:3000"

# NextAuth 密钥（必需）
# 生成方法: openssl rand -base64 32
NEXTAUTH_SECRET="your-generated-secret-key-here"

# 注册邀请码（必需）
# 用于保护注册接口，防止未授权注册
# 生成方法: openssl rand -hex 16
REGISTRATION_INVITE_CODE="your-invite-code-here"

# Resend 邮件服务（必需 - 用于邮箱验证和密码重置）
# 获取方法：访问 https://resend.com 注册并创建 API Key
RESEND_API_KEY="re_..."

# 发件人邮箱（必需 - 需要在 Resend 中验证域名）
# 开发环境可以使用: onboarding@resend.dev
# 生产环境使用您自己的域名: noreply@yourdomain.com
EMAIL_FROM="onboarding@resend.dev"

# OpenAI API（可选 - 用于 AI 评价生成）
# 如不配置，系统会使用内置的模拟评价
# OPENAI_API_KEY="sk-..."
OPENAI_API_KEY=""
# 应用公开 URL（可选）
# NEXT_PUBLIC_APP_URL="http://localhost:3000"

# 环境标识
NODE_ENV="development"
